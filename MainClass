import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int StaffNumber;
        String StaffLocation;

        System.out.println("Enter the current staff number:");
        StaffNumber = scanner.nextInt();
        System.out.println("Enter the current staff hiring location:");
        StaffLocation = scanner.nextLine();

        StaffHiring staffHiring = new StaffHiring(StaffNumber, StaffLocation);
        staffHiring.printStaffHiring();
    }
}
